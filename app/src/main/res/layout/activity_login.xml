<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Login_Activity">

    <!-- Banking Buttons -->

    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Hello, Welcome To Your Account"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/checkingAccountBalance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Checking Account Balance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeMessage"
        android:backgroundTint="@color/black"/>

    <Button
        android:id="@+id/savingsAccountBalance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Savings Account Balance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkingAccountBalance"
        android:backgroundTint="@color/black"/>

    <Button
        android:id="@+id/withdrawButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Withdraw Funds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/savingsAccountBalance"
        android:backgroundTint="@color/black"/>

    <Button
        android:id="@+id/depositButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Deposit Funds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/withdrawButton"
        android:backgroundTint="@color/black"/>

    <Button
        android:id="@+id/signOutButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/depositButton"
        android:backgroundTint="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>
